<h1>Create an album!</h1>

<form action="<%= albums_url %>" method="post">

  <%= auth_token %>

  <label for="title">Title</label>
  <input id="title" type="text" name="album[title]" placeholder="title">

  <label for="format">Format</label>
  <label>Live</label>
  <input id="format" type="radio" name="album[format]" value="Live">
  <label>Studio</label>
  <input id="format" type="radio" name="album[format]" value="Studio">

  <label for="artist">Artist</label>
  <select name="album[artist_id]">
    <% Band.all.each do |artist| %>
      <option value="<%= artist.id %>"> <%= artist.name %> </option>
    <% end %>
  </select>

  <input type="submit" />
</form>
